extends layout.pug

block content

  nav.nav
    a(href='/')
      span &larr;
      |  Back

  article.portfolio-projects
    .inner-wrapper.flex-row-wrap.two-col
      .project-info-box.box

        h1= `${project.project_name}`
        p= `${project.description}` 

      .project-tech-links-box.box
        h6 Technologies
        ul
          each technology in project.technologies
            li= technology

        a.btn-link(href=`${project.live_link}`) Live Demo
        a.btn-link(href=`${project.github_link}`) GitHub Repo

    .project-img-box.box

      img.project-img(src=`${project.images_url[0]}`, alt=`A photo of ${project.project_name}`)
      img.project-img(src=`${project.images_url[1]}`, alt=`A photo of ${project.project_name}`)

    nav.nav
      a(href='/')
        span &larr;
        |  Back